<div class="container">
  <div class="banner-content text-center mb-5">
    <h1 class="mt-5">Study spaces around the world</h1>
  </div>

  <div class="row mb-5">
    <% @spaces.each do |space| %>
      <div class="col-12 col-md-6 col-lg-3 mb-4">
        <div class="card p-2 mb-3">
          <div class="card-body d-flex flex-column justify-content-between align-items-center">
            <% if space.photos.attached? %>
              <%= cl_image_tag space.photos[0].key, class: 'card-img-top' %>
            <% end %>
            <h4 class="mt-3"><%= space.title %></h4>
            <p class="text-muted"><i class="fas fa-map-marker-alt mr-1"></i><%= space.location %></p>
            <p class="card-text">
              <% if space.description.size > 40 %>
                <%= "#{space.description.slice(0..40)}..." %>
              <% else %>
                <%= space.description %>
              <% end %>
            </p>
            <%= link_to "See details", space_path(space), class: "btn btn-pink" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
