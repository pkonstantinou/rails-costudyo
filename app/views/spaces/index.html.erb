<div class="container">
   <div class="banner-content text-center mb-4">
    <h1>Study spaces in Munich</h1>
  </div>

  <div class="row">
    <% @spaces.each do |space| %>
      <div class="col-12 col-md-6 col-lg-3 mb-4">
        <div class="card">
          <img class="card-img-top p-2" src="https://cdn.pixabay.com/photo/2017/03/28/12/11/chairs-2181960_960_720.jpg" alt="dummy-costudyo-image">
          <div class="card-body d-flex flex-column justify-content-between">
            <h4><%= space.title %></h4>
            <p class="card-text"><%= space.description.slice(0..50)... %></p>
            <%= link_to "See details", space_path(space), class: "btn btn-flat" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
