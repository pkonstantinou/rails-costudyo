<div class="container dashboard my-5">
  <h1 class="text-center">Personal dashboard</h1>
  <ul class="nav nav-pills" id="pills-tab" data-tab="<%= @tab %>" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active dashboard-nav-link" id="pills-my-spaces-tab" data-toggle="pill" href="#pills-my-spaces" role="tab" aria-controls="pills-my-spaces" aria-selected="true">My spaces</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link dashboard-nav-link" id="pills-my-bookings-tab" data-toggle="pill" href="#pills-my-bookings" role="tab" aria-controls="pills-my-bookings" aria-selected="false">My bookings</a>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-my-spaces" role="tabpanel" aria-labelledby="pills-my-spaces-tab">
      <div class="dashboard-container">
        <%= render 'my_spaces' %>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-my-bookings" role="tabpanel" aria-labelledby="pills-my-bookings-tab">.
      <%= render 'my_bookings' %>
    </div>
  </div>
</div>
